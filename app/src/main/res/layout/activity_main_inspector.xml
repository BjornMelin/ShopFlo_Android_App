<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityInspector">


    <!-- Header for the Inspector Activity View -->
    <RelativeLayout
        android:id="@+id/header_inspector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_blue"
        android:gravity="center" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/inspector_home"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="24sp" />
    </RelativeLayout>


    <!-- Logout Button -->
    <Button
        android:id="@+id/logout"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginRight="@dimen/activity_general_margin"
        android:layout_marginEnd="@dimen/activity_general_margin"
        android:layout_marginTop="@dimen/activity_general_margin"
        android:background="@android:color/white"
        android:textColor="@color/main_blue"
        android:textStyle="bold"
        android:padding="@dimen/activity_general_margin"
        android:text="@string/logout" />


    <!-- Review Button -->
    <Button
        android:id="@+id/review_inspector"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/activity_general_margin_long"
        android:background="@android:color/white"
        android:textColor="@color/main_blue"
        android:textStyle="bold"
        android:padding="@dimen/activity_general_margin"
        android:text="@string/review_view" />


    <!-- Text View that shows that a users session is valid -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/session_valid"
        android:textAlignment="center"
        android:textSize="16sp" />

    <!-- Text View that shows the users access token credentials
         This is needed in order to change between activities -->
    <TextView
        android:id="@+id/credentials"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center" />

</LinearLayout>